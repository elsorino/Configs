[colors]
background = #ff333333
background-alt = #1a1626
foreground = #ffffff
foreground-alt = #494949
foreground-dim = #494949
primary = #ffb52a
secondary = #e60053
alert = #ff6600
black      = #000000
white	   = #ffffff
red        = #cd3076 
blue       = #4da7dc
grey       = #32363c
green      = #17e53e
high = #4da7dc
high-alt = #0c2b41

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 100%
height = 25
offset-x = 0
offset-y = 0

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
overline-color = #f00
underline-size = 1
underline-color = #aaaaaa

spacing = 0
padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 0
font-0 = Arimo for Powerline:size=12;3
font-1 = Font Awesome 5 Brands:size=12;1.5
font-2 = Font Awesome 5 Free:size=12;1.5


modules-left = i3 xwindow
modules-center = date
modules-right = volume 
systemRoot systemHome s

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true

scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev


; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
tray-position = 

; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 16

; Enable pseudo transparency
; Will automatically be enabled if a fully transparent
; background color is defined using `tray-background`
tray-transparent = false

; Background color for the tray container
; By default the tray container will use the bar
; background color.
; Note: 32 bit alpha blending is not supported.
tray-background = ${root.background}

; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

; Pad the sides of each tray icon
tray-padding = 0

; Scale factor for tray clients
tray-scale = 1.0

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-background = ${colors.background}
label-padding = 2
format-underline = ${colors.green}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-underline = ${colors.secondary}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/bspwm]
type = internal/bspwm
ws-icon-default = x

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

ws-icon-0 = "1;"
ws-icon-1 = "2;"
ws-icon-2 = "3;"
ws-icon-3 = "4;"
ws-icon-4 = "5;5"
ws-icon-5 = "6;6"
ws-icon-6 = "7;7"
ws-icon-7 = "8;8"
ws-icon-8 = "9;9"
ws-icon-9 = "10;10"

label-mode = %mode%
label-mode-padding = 2

label-focused = ●
label-focused-underline = #ffffff
label-focused-padding = 2

label-unfocused = ○
label-unfocused-padding = 2

label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible-foreground = ${module/bspwm.label-empty-padding}
label-visible-padding = ${module/bspwm.label-empty-padding}

[module/theme]
format-background = ${colors.background}
format-padding = 2
format-foreground = ${self.format-underline}

format-connected-background = ${module/theme.format-background}
format-unconnected-background = ${module/theme.format-background}
format-mounted-background = ${module/theme.format-background}
format-unmounted-background = ${module/theme.format-background}
format-charging-background = ${module/theme.format-background}
format-discharging-background = ${module/theme.format-background}

format-connected-padding = ${module/theme.format-padding}
format-unconnected-padding = ${module/theme.format-padding}
format-mounted-padding = ${module/theme.format-padding}
format-unmounted-padding = ${module/theme.format-padding}
format-charging-padding = ${module/theme.format-padding}
format-discharging-padding = ${module/theme.format-padding}

format-mounted-foreground = ${self.format-mounted-underline}
format-unmounted-foreground = ${self.format-unmounted-underline}

[module/systemRoot]
inherit = module/theme
type = internal/fs
interval = 20
mount-0 = /
label-mounted = " %free%"
label-unmounted = " ??"
format-mounted-underline = #55a049
format-unmounted-underline =

[module/cpu]
inherit = module/theme
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%%
format-underline = #FF7777

[module/memory]
inherit = module/theme
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%
format-underline = #999999
[module/wlan]
inherit = module/theme
type = internal/network
interface = wlo1
interval = 1

format-connected = <label-connected>
format-connected-underline = #268bd2
format-disconnected-underline = ${colors.alert}

;label-connected = " %local_ip% %signal% %downspeed% %upspeed%"
label-connected = " %signal% [  %downspeed% ] [  %upspeed% ]"
label-disconnected = "OFFLINE"
label-connected-foreground = ${colors.high}
label-disconnected-foreground = ${colors.alert}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
inherit = module/theme
type = internal/network
interface = eth0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
inherit = module/theme
type = internal/date
interval = 1

time = "%b %d - %H:%M:%S "
time-alt = "%a - %d.%m.%Y - %I:%M %p"

format-prefix = 
format-underline = 

label = %date% %time%
[module/redshift]
type = custom/script
interval = 10
exec = ~/.config/polybar/redshift.sh

[module/volume]
inherit = module/theme
type = internal/volume
format-volume = <label-volume> <bar-volume>
format-muted-prefix = " "
format-muted-foreground = #f3f4f5
label-muted = sound muted
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.red}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = #ffffff



[module/ewmh]
type = internal/xworkspaces

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = false
index-sort = true
; Create click handler used to focus desktop
; Default: true
enable-click = false

; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = false

; icon-[0-9]+ = <desktop-name>;<icon>
; NOTE: The desktop name needs to match the name configured by the WM
; You can get a list of the defined desktops using:
; $ xprop -root _NET_DESKTOP_NAMES
icon-0 = 1
icon-1 = 2
icon-2 = 3
icon-3 = 4
; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(active|urgent|occupied|empty)>
; Default: <label-state>
format = <label-state>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = %index%
label-active-foreground = ${colors.background-alt}
label-active-background = #a5a5ff
label-active-underline = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-occupied = %icon%
label-occupied-underline = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-foreground = ${colors.foreground-dim}
label-urgent-underline = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = %icon%
label-empty-foreground = #55
