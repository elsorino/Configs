[colors]
background = #282A36
foreground = #F8F8F2
gray 	   = #44457a
alert      = #ff5555
red        = #ff5555 
blue       = #8be9fd
green      = #50fa7b
cyan       = #8be9fd

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/main]
monitor = ${env:MONITOR:HDMI}
bottom = false
width = 100%
height = 25
;offset-x = 0
;offset-y = 5

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #000000
underline-size = 1
underline-color = #aaaaaa

spacing = 1
padding-left = 0
padding-right = 1
module-margin-left = 0
module-margin-right = 1
font-0 = Source Code Pro:size=12;3
font-1 = Font Awesome 5 Free:pixelsize=12;2
font-2 = Font Awesome 5 Free Solid:pixelsize=12;2
font-3 = Font Awesome 5 Brands:pixelsize=12;2

modules-left = i3 xwindow
modules-center = date
modules-right = spotify volume wlan

wm-restack = i3


scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
tray-position = 

; If true, the bar will not shift its

; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 16

; Enable pseudo transparency
; Will automatically be enabled if a fully transparent
; background color is defined using `tray-background`
tray-transparent = false

; Background color for the tray container
; By default the tray container will use the bar
; background color.
; Note: 32 bit alpha blending is not supported.
tray-background = ${root.background}

; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

; Pad the sides of each tray icon
tray-padding = 0

; Scale factor for tray clients
tray-scale = 1.0

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-background = ${colors.background}
label-padding = 2
;format-underline = ${colors.blue}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-spacing = 0
index-sort = true
pin-workspaces = true

label-focused-padding = 2
label-focused-margin = 0
label-focused-font = 3
label-focused-background = ${colors.cyan}
label-focused-foreground = ${colors.background}

label-unfocused-padding = 2
label-unfocused-margin = 0
label-unfocused-font = 3

label-urgent-padding = 2
label-urgent-margin = 0
label-urgent-font = 3

label-visible-padding = 2
label-visible-margin = 0
label-visible-font = 3

[module/theme]
;format-background = ${colors.background}
;format-padding = 0
;format-foreground = ${self.format-underline}

;format-connected-background = ${module/theme.format-background}
;format-unconnected-background = ${module/theme.format-background}
;format-mounted-background = ${module/theme.format-background}
;format-unmounted-background = ${module/theme.format-background}
;format-charging-background = ${module/theme.format-background}
;format-discharging-background = ${module/theme.format-background}

;format-connected-padding = ${module/theme.format-padding}
;format-unconnected-padding = ${module/theme.format-padding}
;format-mounted-padding = ${module/theme.format-padding}
;format-unmounted-padding = ${module/theme.format-padding}
;format-charging-padding = ${module/theme.format-padding}
;format-discharging-padding = ${module/theme.format-padding}

;format-mounted-foreground = ${self.format-mounted-underline}
;format-unmounted-foreground = ${self.format-unmounted-underline}

[module/systemRoot]
;inherit = module/theme
type = internal/fs
interval = 20
mount-0 = /
label-mounted = " %free%"
label-unmounted = " ??"
format-mounted-underline = #55a049
format-unmounted-underline =

[module/cpu]
;inherit = module/theme
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%%
format-underline = #FF7777

[module/memory]
;inherit = module/theme
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%
format-underline = #999999
[module/wlan]
;inherit = module/theme
type = internal/network
interface = wlan0
interval = 1

format-connected = <label-connected> 
format-disconnected-underline = ${colors.red}

;label-connected = " %local_ip% %signal% %downspeed% %upspeed%"
label-connected = " "
label-disconnected = "OFFLINE"
;label-connected-foreground = ${colors.green}
label-disconnected-foreground = ${colors.red}


[module/eth]
;inherit = module/theme
type = internal/network
interface = eth0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
;inherit = module/theme
type = internal/date
interval = 1

time = "%b %d - %H:%M"
time-alt = "%a - %d.%m.%Y - %I:%M %p"

format-prefix = 
format-underline = 

label = %date% %time%
[module/redshift]
type = custom/script
interval = 10
exec = ~/.config/polybar/redshift.sh

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume><label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =   muted
label-muted-foreground = #aaa
format-volume-padding = 0
format-muted-padding = 0

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
format-underline = ${colors.red}

[module/ewmh]
type = internal/xworkspaces

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = false
index-sort = true
; Create click handler used to focus desktop
; Default: true
enable-click = false

; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = false

; icon-[0-9]+ = <desktop-name>;<icon>
; NOTE: The desktop name needs to match the name configured by the WM
; You can get a list of the defined desktops using:
; $ xprop -root _NET_DESKTOP_NAMES
icon-0 = 1
icon-1 = 2
icon-2 = 3
icon-3 = 4
; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(active|urgent|occupied|empty)>
; Default: <label-state>
format = <label-state>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = %index%
label-active-foreground = ${colors.background-alt}
label-active-background = ${colors.background}
label-active-underline = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-occupied = %icon%
label-occupied-underline = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-foreground = ${colors.foreground-dim}
label-urgent-underline = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = %icon%
label-empty-foreground = #55

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python /home/elso/bin/spotify_status.py -f '{artist}: {song}'
format-underline = ${colors.green}