[colors]
background = #282a36
foreground = #F8F8F2
gray 	   = #44457a
red        = #ff5555 
green      = #50fa7b
cyan       = #8be9fd

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/main]
monitor = HDMI-2
bottom = false
width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

spacing = 1
padding-left = 0
padding-right = 1
module-margin-left = 0
module-margin-right = 1
fixed-center = true
;radius = 12

border-left-size = 5
border-right-size = 5
border-top-size = 5
border-bottom-size = 0

font-0 = segoeuil:size=11;3
font-1 = Font Awesome 5 Free:pixelsize=12;2
font-2 = Font Awesome 5 Free Solid:pixelsize=12;2
font-3 = Font Awesome 5 Brands:pixelsize=12;2

modules-left = i3 xwindow
modules-center = 
modules-right =  volume wlan date

wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; If true, the bar will not shift its

; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 16

; Enable pseudo transparency
; Will automatically be enabled if a fully transparent
; background color is defined using `tray-background`
;ray-transparent = true

; Background color for the tray container
; By default the tray container will use the bar
; background color.
; Note: 32 bit alpha blending is not supported.
;tray-background = #BB000000

; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

; Pad the sides of each tray icon
tray-padding = 0

; Scale factor for tray clients
tray-scale = 1

;Tray only on left monitor
[bar/monitor1]
inherit = bar/main
monitor = HDMI-1
tray-position = right
;tray-offset-x = 914
;padding-right = 8.5

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-background = ${colors.background}
label-padding = 1

[module/i3]
type = internal/i3
format = <label-state>
format-spacing = 0
index-sort = true
pin-workspaces = true
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

label-focused = %icon%
label-focused-foreground = ${colors.cyan}
label-focused-padding = 2
label-focused-margin = 0
label-focused-font = 3

label-unfocused = %icon%
label-unfocused-padding = 2
label-unfocused-margin = 0
label-unfocused-font = 3

label-urgent = %icon%
label-urgent-padding = 2
label-urgent-margin = 0
label-urgent-font = 3

label-visible = %icon%
label-visible-padding = 2
label-visible-margin = 0
label-visible-font = 3

[module/systemRoot]
type = internal/fs
interval = 20
mount-0 = /
label-mounted = " %free%"
label-unmounted = " ??"
format-mounted-underline = #55a049
format-unmounted-underline =

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%%
format-underline = #FF7777

[module/memory]
;inherit = module/theme
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%
format-underline = #999999

[module/wlan]
type = internal/network
interface = wlan0
interval = 3
format-connected = <label-connected> 
label-connected = ""
label-disconnected-foreground = ${colors.gray}

[module/date]
type = internal/date
interval = 1
time = "%A %B %d - %H:%M"
label =  %time%

[module/volume]
type = internal/pulseaudio
format-volume = <ramp-volume><label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =  muted
label-muted-foreground = #aaa
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec-if = pgrep -x spotifyd
exec = /home/elso/bin/spotify.sh

[module/mullvad]
type = custom/script
exec = $HOME/bin/mullvad_module.sh
click-left = $HOME/bin/mullvad_module.sh --toggle-connection &
click-right = $HOME/bin/mullvad_module.sh --location-menu &
interval = 5
format =  
